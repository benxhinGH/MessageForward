<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.usiellau.messageforward">

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MonitorNumberActivity"/>
        <activity android:name=".ForwardNumberActivity"/>


        <service android:name=".MonitorService"/>

        <receiver android:name=".MessageSendResReceiver">
            <intent-filter>
                <action android:name="com.usiellau.messageforward.SENT_MSG_ACTION"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
